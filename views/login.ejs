<!doctype html>
<html lang="en">

<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" />
  <link rel="stylesheet" href="/style.css" type="text/css"></link>


  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</head>

<body>
  <%- include('navBar.ejs') -%>
  <div class="container">
    <div class="row">
        <form method="POST" class="col s6 offset-s3" action="/home">
        <div class="row">
          <div class="input-field col s12">
            <input id="email" type="email" class="validate" name="email" class="validate"  required="" aria-required="true">
            <span class="helper-text" data-error="Invalid Email" data-success="Valid Email"></span>
            
            <label for="email">Email</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="password" type="password" class="validate" name="password"  required="" aria-required="true">
            <span class="helper-text" data-error="password strength low" data-success="password strengeth"></span>
            <label for="password">Password</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12 offset-s5">
            <button class="waves-effect waves-light btn">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <span style="position: fixed; bottom: 0;	width: 100%"><%- include('fotter.ejs') -%></span>
</body>

</html>